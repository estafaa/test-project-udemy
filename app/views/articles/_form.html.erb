
<%= render 'shared/errors', obj: @article %>


<div class='row'>
    <div class='col-sm-12'>
        <%= form_for(@article, :html => {class: "container", role: "form"}) do |f| %>
        
        <div class="form-group row">
            <div class="control-label col-sm-2">
                <%= f.label :title %> 
            </div>
            <div class="col-sm-6">
                <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="control-label col-sm-2">
                <%= f.label :description %> 
            </div>
            <div class="col-sm-6">
                <%= f.text_area :description, rows: 12, class: "form-control", placeholder: "Description of article", autofocus: true %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-sm-2 ">
                </div>
           <div class="col-sm-2 ">
          <%= f.submit class: 'btn btn-primary btn-lg'%>  
          
           </div>
           <div class="col-sm-4" style="margin-top: 10px; margin-left: 40px">
             [<%= link_to "Cancel request and return to article list", articles_path %>]
           </div>
           
        </div>
          
       
        <% end %>
        
       
      
            
        
            
    </div>
</div>