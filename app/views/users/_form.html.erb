<%= render 'shared/errors', obj: @user %>


<div class='row'>
    <div class='col-sm-12'>
        <%= form_for(@user, :html => {class: "container", role: "form"}) do |f| %>
        
        <div class="form-group row">
            <div class="control-label col-sm-2">
                <%= f.label :username %> 
            </div>
            <div class="col-sm-6">
                <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="control-label col-sm-2">
                <%= f.label :email %> 
            </div>
            <div class="col-sm-6">
                <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="control-label col-sm-2">
                <%= f.label :password %> 
            </div>
            <div class="col-sm-6">
                <%= f.password_field :password, class: "form-control", placeholder: "Enter password"%>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-sm-2 ">
                </div>
           <div class="col-sm-2 ">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update info", class: 'btn btn-primary btn-lg')%>  
          
           </div>
           <div class="col-sm-4" style="margin-top: 10px; margin-left: 40px">
             [<%= link_to "Cancel request and return to article list", articles_path %>]
           </div>
           
        </div>
          
       
        <% end %>
        
       
      
            
        
            
    </div>
</div>