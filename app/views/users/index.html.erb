<h1 align="center"> All A-Blogers</h1>
   <%= will_paginate%>
<div align="center">
    <% @users.each do |user| %>
        <ul class="listing">
            <div class="row">
                <div class="col-sm-4">
                </div>
                <div class="card col-sm-4">
                    <li> <%= link_to gravatar_for(user), user_path(user) %></li>
                    <li class="article-title">
                        <%= link_to user.username, user_path(user) %>
                    </li>
                    <li> <small> <%= pluralize(user.articles.count, "article") if user.articles %></small></li>
                      <% if logged_in? and current_user.admin? %> 
                          <li> <%= link_to "Delete", user_path(user), method: :delete, 
                                   class: "btn btn-sm btn-danger", 
                                   data: {confirm: "Are you sureyou want delete this user and all his articles?"}%> </li>
                      <% end %>
                </div>
            </div>
        </ul>
    <% end %>
</div>
   <%= will_paginate%>