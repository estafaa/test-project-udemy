<h1 align="center"> Log in</h1>

<%= form_for(:session, :html => {class: "container", role: "form"}, url: login_path) do |f| %>
        
    
        
        <div class="form-group row">
            <div class="control-label col-sm-2">
                <%= f.label :email %> 
            </div>
            <div class="col-sm-6">
                <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="control-label col-sm-2">
                <%= f.label :password %> 
            </div>
            <div class="col-sm-6">
                <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autocomplete: "off" %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 ">
                </div>
           <div class="col-sm-2 ">
          <%= f.submit "Log in", class: 'btn btn-primary btn-lg'%>  
          
           </div>
           <div class="col-sm-4" style="margin-top: 10px; margin-left: 40px">
             [<%= link_to "Cancel request and return to article list", articles_path %>]
           </div>
           
        </div>
          
       
<% end %>
        
       
      
            