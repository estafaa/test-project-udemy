<%= render 'shared/errors', obj: @category %>


<div class='row'>
    <div class='col-sm-12'>
        <%= form_for(@category, :html => {class: "container", role: "form"}) do |f| %>
            <div class="form-group row">
                <div class="control-label col-sm-2">
                    <%= f.label :name %> 
                </div>
                <div class="col-sm-6">
                    <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 ">
                </div>
               <div class="col-sm-2 ">
              <%= f.submit  class: 'btn btn-primary btn-lg'%>  
               </div>
               <div class="col-sm-4" style="margin-top: 10px; margin-left: 40px">
                 [<%= link_to "Cancel request and return to article list", articles_path %>]
               </div>
            </div>
        <% end %>
    </div>
</div>